<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm">
                    <nav aria-label="breadcrumb float-sm-left">
                        <ol class="breadcrumb">
                            {{#each client}}
                            <li class="breadcrumb-item"><a href="/client/client-profile/{{id}}">Профиль клиента</a></li>
                            {{/each}}
                            <li class="breadcrumb-item active" aria-current="page">Обновить данные</li>
                        </ol>
                    </nav>
                </div> 
            </div> 
        </div> 
    </div>
    
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div class="col-12">
                        <div class="row">
                            <div class="col-md-10">
                                <div class="card card-primary">
                                    <div class="card-header">
                                        <h3 class="card-title"> Обновить / изменить информацию о клиенте </h3>
                                    </div>
                                    <div class="card-body">
                                        <div class="row" class="align-items:center">
                                            <div class="col-sm-8">
                                                {{#each client}}
                                                <form action="/client/client-edit/{{id}}" method="POST">
                                                
                                                <h2>Изменение информации о текущем клиенте</h2>
                                                

                                                <div class="form-group">
                                                    <label>Имя и фамилия</label>
                                                    <input type="text" placeholder="{{first_name}}"  class="form-control" name="update_name">
                                                </div>

                                                <div class="form-group">
                                                    <label>Телефонный номер</label>
                                                    <input type="text" placeholder="{{phone_number}}"  class="form-control" name="update_phone_number">
                                                </div>

                                                <div class="form-group">
                                                    <label>Название компании</label>
                                                    <input type="text" placeholder="{{company}}"  class="form-control" name="update_company">
                                                </div>
                                                
                                                    
                                                {{/each}}

                                                <div class="form-group">
                                                    <input type="submit" class="btn btn-primary" value="Изменить">
                                                        
                                                </div>
                                                
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
     
</div>
   
<script src="/plugins/jquery/jquery.min.js"></script>
<script src="/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="/plugins/select2/js/select2.full.min.js"></script>
<script src="/dist/js/adminlte.min.js"></script>
<script src="/dist/js/demo.js"></script>


