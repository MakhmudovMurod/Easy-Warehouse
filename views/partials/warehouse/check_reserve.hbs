<div class="content-wrapper">
  
  <div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-12">
        <ol class="breadcrumb float-sm-left">
          <li class="breadcrumb-item active">Резерв</li>
        </ol>
      </div>
    </div>
  </div>
  </div>
      
  <div class="content">
    
    <div class="row mb-4">
      <div class="col-4">
        <a href="/warehouse/warehouse-replenish" class="btn btn-success"><i class="fa fa-plus-circle"></i> Пополнить</a>
        <a href="/warehouse/warehouse-supplement-story" class="btn btn-info"><i class="fa fa-history"></i> История</a>
      </div>
      
    </div>
    
    <div class="row">

      <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Списки товаров на складе</h3>
            </div>
          
            <div class="card-body">
                <table id="Table2" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>№</th>
                            <th>Наименование Продкции</th>
                            <th>Рисунок</th>
                            <th>Сорт</th>
                            <th>Код продукта</th>
                            <th>Кол-во</th>
                            <th>Цена (UZS)</th>
                            <th>Общая Стоимость (UZS)</th>
                        </tr>
                    </thead>

                    <tbody>
                    
                      {{#each products }}
                        
                        <tr>
                          <td>{{id}}</td>
                          <td>{{product_name}}</td>
                          <td>{{drawing}}</td>
                          <td>{{sort}}</td>
                          <td>{{overall_code}}</td>
                          <td class="text-success text-bold">{{currencyFormat available_quantity}}</td>
                          {{#if price}}
                          <td>{{currencyFormat price}}</td>
                          <td class="text-info text-bold">{{currencyFormat (math  available_quantity "*" price)}}</td>
                          {{/if}}
                        
                        </tr>
                      
                      {{/each}} 

                    </tbody>
                    <tfoot>
                        <tr>
                          <th>№</th>
                          <th>Наименование Продкции</th>
                          <th>Рисунок</th>
                          <th>Сорт</th>
                          <th>Код продукта</th>
                          <th>Кол-во</th>
                          <th>Цена (UZS)</th>
                          <th>Общая Стоимость (UZS)</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
      </div>

    </div>
      
  </div>

</div>
    
<script src="/dist/js/adminlte.min.js"></script>
<script src="/plugins/jquery/jquery.min.js"></script>
<script src="/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="/dist/js/adminlte.js"></script>
<script src="/plugins/select2/js/select2.full.min.js"></script>
<script src="/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
<script src="/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
<script src="/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>

<script>
  $(function () {
    $("#Table1").DataTable({
      "responsive": true,
      "autoWidth": false,
    });
  });

  $(function () {
    $("#Table2").DataTable({
      "responsive": true,
      "autoWidth": false,
    });
  });

  $(function () {
    $("#Table3").DataTable({
      "responsive": true,
      "autoWidth": false,
    });
  });
</script>