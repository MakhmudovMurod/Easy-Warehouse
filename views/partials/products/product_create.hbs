     if($(this).is(':checked')){
 
        $('#add_service3').attr("disabled", false);
        $('#add_service3').attr("required", true);
 
    } else{
 
         $('#add_service3').attr("disabled", true);
         $("select#add_service3").val("0");
         $('#add_service3').attr("required", false);
    }
    });
    

    
    </script>


    
    