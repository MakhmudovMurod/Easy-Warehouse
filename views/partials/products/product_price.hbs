    <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm">
                            <ol class="breadcrumb float-sm-left">
                                <!-- <li class="breadcrumb-item"><a href="#">Главная</a></li> -->
                                <li class="breadcrumb-item active">Прайслист</li>
                            </ol>
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->

            <!-- Main content -->
            <section class="content">
                <div class="row">

                    <!-- Forms -->


                    <!-- Tables -->
                    <div class="col-12">
                        <!-- 1 sort -->
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Список товаров</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <table id="example1" class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th style="width:5px;">№</th>
                                            <th style="width:240px;">Наименование Продкции</th>
                                            <th style="width:80px;">Рисунок</th>
                                            <th style="width:80px;">Сорт</th>
                                            <th>Доп. услуга</th>
                                            <th style="width:150px;">Код продукта</th>
                                            <th>Цена (UZS)</th>
                                            <th>Цена с доп. услугой(UZS)</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                         {{#each products }}
                                        <tr>
                                            <td>{{id}}</td>
                                            <td>{{product_name}}</td>
                                            <td>{{drawing}}</td>
                                            <td>{{sort}}</td>
                                            
                                            {{#if AdditionalServiceId}}
                                                <td class="text-success text-bold">{{Additional_Service.name}}</td>
                                            {{else}}
                                                <td class="text-danger text-bold">БЕЗ УСЛУГ</td>
                                            {{/if}}
                                            
                                            <td>{{overall_code}}</td>
                                            
                                            {{#if price}}
                                                <td>{{currencyFormat price}} </td>
                                            {{/if}}

                                            {{#if price}}
                                                {{#if AdditionalServiceId}}
                                                    <td class="text-success text-bold">{{currencyFormat (math price "+" Additional_Service.price)}}</td>
                                                {{else}}
                                                    <td class="text-danger text-bold">БЕЗ УСЛУГ</td>
                                                {{/if}}
                                            {{/if}}
                                            
                                            
                                            <td style="width:20px;">
                                                <a href="/product/product-edit/{{id}}">
                                                    <button type="button"
                                                        class="btn btn-primary btn-sm"><i class="fa fa-pen"></i></button>
                                                </a>
                                                <form action="/product/product-delete/{{id}}" method="POST" style="display:inline-block;">
                                                    <button type="submit"
                                                        class="btn btn-danger btn-sm mt-1"><i class="fa fa-trash"></i></button>    
                                                </form>
                                                
                                            </td>
                                        </tr>
                                       {{/each}}
                                        
                                    </tbody>

                                    <tfoot>
                                        <tr>
                                            <th style="width:5px;">№</th>
                                            <th style="width:240px;">Наименование Продкции</th>
                                            <th style="width:80px;">Рисунок</th>
                                            <th style="width:80px;">Сорт</th>
                                            <th>Доп. услуга</th>
                                            <th style="width:150px;">Код продукта</th>
                                            <th>Цена (UZS)</th>
                                            <th>Цена с доп. услугой(UZS)</th>
                                            <th></th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </div>
                    <!-- /.col -->


                </div>
                <!-- /.row -->
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
  
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->





    
